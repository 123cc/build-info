{
  "files": [
    {
      "pattern": "${WORKSPACE}/files/(*1*)",
      "target": "${REPO}/${TEST_SPACE}/{1}",
      "recursive": "true",
      "flat": "true"
    },
    {
      "pattern": "${WORKSPACE}/files/(*3*)",
      "target": "${REPO}/${TEST_SPACE}/{1}",
      "recursive": "true",
      "flat": "true"
    },
    {
      "pattern": "${WORKSPACE}/files/(*2*)",
      "target": "${REPO}/${TEST_SPACE}/{1}",
      "recursive": "true",
      "flat": "true",
      "props": "searchMe=true"
    }
  ]
}